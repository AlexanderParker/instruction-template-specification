{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://alexanderparker.github.io/instruction-template-specification/schema/v1.0/its-standard-types-v1.json",
  "title": "Instruction Template Specification - Standard Types v1.0",
  "description": "Standard library of instruction types for content generation",
  "type": "object",
  "properties": {
    "instructionTypes": {
      "type": "object",
      "properties": {
        "title": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with a title using this user prompt: ([{<{description}>}]). Format requirements: Create a {style} title that is {length} in length.>>"
            },
            "description": {
              "const": "Generates titles and headlines with customisable style and length"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "style": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "headline",
                            "descriptive",
                            "catchy",
                            "formal",
                            "creative"
                          ]
                        },
                        "default": {
                          "const": "headline"
                        }
                      }
                    },
                    "length": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "short",
                            "medium",
                            "long"
                          ]
                        },
                        "default": {
                          "const": "short"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "list": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with a list using this user prompt: ([{<{description}>}]). Format requirements: Use {format} formatting with each item on a new line.{itemCount, select, undefined{} other{ Create exactly {itemCount} items.}}>>"
            },
            "description": {
              "const": "Generates formatted lists with customisable formatting and item counts"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "format": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "bullet_points",
                            "numbered",
                            "dashes",
                            "plain"
                          ]
                        },
                        "default": {
                          "const": "bullet_points"
                        }
                      }
                    },
                    "itemCount": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "integer"
                        },
                        "minimum": {
                          "const": 1
                        },
                        "maximum": {
                          "const": 20
                        }
                      }
                    }
                  }
                }
              }
            },
            "examples": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "config": {
                      "type": "object",
                      "properties": {
                        "description": {
                          "const": "list 5 different citrus fruits"
                        },
                        "format": {
                          "const": "bullet_points"
                        },
                        "itemCount": {
                          "const": 5
                        }
                      }
                    },
                    "output": {
                      "const": "<<Replace this placeholder with a list using this user prompt: ([{<list 5 different citrus fruits>}]). Format requirements: Use bullet_points formatting with each item on a new line. Create exactly 5 items.>>"
                    }
                  }
                }
              ]
            }
          }
        },
        "paragraph": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with text using this user prompt: ([{<{description}>}]). Format requirements: Use {tone} tone and {length} length (short=1-2 sentences, medium=2-4 sentences, long=4+ sentences).>>"
            },
            "description": {
              "const": "Generates paragraphs of text with customisable tone and length"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "tone": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "formal",
                            "casual",
                            "enthusiastic",
                            "professional",
                            "friendly"
                          ]
                        },
                        "default": {
                          "const": "professional"
                        }
                      }
                    },
                    "length": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "short",
                            "medium",
                            "long"
                          ]
                        },
                        "default": {
                          "const": "medium"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "table": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with a table using this user prompt: ([{<{description}>}]). Format requirements: Use {format} format.{columns, select, undefined{} other{ Include {columns} columns.}}{rows, select, undefined{} other{ Include {rows} rows.}}>>"
            },
            "description": {
              "const": "Generates tables with customisable formatting, columns, and rows"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "format": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "markdown",
                            "plain_text",
                            "csv"
                          ]
                        },
                        "default": {
                          "const": "markdown"
                        }
                      }
                    },
                    "columns": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "integer"
                        },
                        "minimum": {
                          "const": 2
                        },
                        "maximum": {
                          "const": 10
                        }
                      }
                    },
                    "rows": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "integer"
                        },
                        "minimum": {
                          "const": 1
                        },
                        "maximum": {
                          "const": 50
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "code_block": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with a code block using this user prompt: ([{<{description}>}]). Format requirements: Use {language} language with proper syntax highlighting formatting.>>"
            },
            "description": {
              "const": "Generates code examples and snippets with syntax highlighting"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "language": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "javascript",
                            "python",
                            "java",
                            "html",
                            "css",
                            "sql",
                            "bash",
                            "generic"
                          ]
                        },
                        "default": {
                          "const": "generic"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "image_description": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with an image description using this user prompt: ([{<{description}>}]). Format requirements: Use {style} style (photorealistic=detailed realistic description, artistic=creative artistic description, technical=precise technical description).>>"
            },
            "description": {
              "const": "Generates descriptive text for images with different stylistic approaches"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "style": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "photorealistic",
                            "artistic",
                            "technical"
                          ]
                        },
                        "default": {
                          "const": "photorealistic"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "dialogue": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with a dialogue using this user prompt: ([{<{description}>}]). Format requirements: Create a conversation between {participantCount} people using {style} style. Format each line as: Person Name: \"Dialogue\">>"
            },
            "description": {
              "const": "Generates conversational dialogue between multiple participants"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "participantCount": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "integer"
                        },
                        "minimum": {
                          "const": 2
                        },
                        "maximum": {
                          "const": 6
                        },
                        "default": {
                          "const": 2
                        }
                      }
                    },
                    "style": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "casual",
                            "formal",
                            "dramatic",
                            "humorous"
                          ]
                        },
                        "default": {
                          "const": "casual"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "quote": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with a quote using this user prompt: ([{<{description}>}]). Format requirements: {includeAttribution, select, true{Include attribution with the quote} false{Provide quote without attribution}}.>>"
            },
            "description": {
              "const": "Generates relevant quotes with optional attribution"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "includeAttribution": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "boolean"
                        },
                        "default": {
                          "const": true
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "summary": {
          "type": "object",
          "properties": {
            "template": {
              "const": "<<Replace this placeholder with a summary using this user prompt: ([{<{description}>}]). Format requirements: Use {length} length (brief=1-2 sentences, standard=3-5 sentences, detailed=6+ sentences).>>"
            },
            "description": {
              "const": "Generates summaries of varying lengths and detail"
            },
            "configSchema": {
              "type": "object",
              "properties": {
                "type": {
                  "const": "object"
                },
                "properties": {
                  "type": "object",
                  "properties": {
                    "length": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "string"
                        },
                        "enum": {
                          "const": [
                            "brief",
                            "standard",
                            "detailed"
                          ]
                        },
                        "default": {
                          "const": "standard"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}