{
    "$schema": "https://alexanderparker.github.io/instruction-template-specification/schema/v1.0/its-base-schema-v1.json",
    "version": "1.0.0",
    "extends": [
        "https://alexanderparker.github.io/instruction-template-specification/schema/v1.0/its-standard-types-v1.json"
    ],
    "metadata": {
        "name": "Citrus Fruit List Example",
        "description": "Simple example showing title and list instruction generation using standard types",
        "author": "Alexander Parker",
        "tags": [
            "example",
            "list",
            "title",
            "fruits"
        ],
        "created": "2025-06-29T00:00:00Z"
    },
    "content": [
        {
            "type": "placeholder",
            "id": "fruit_title",
            "instructionType": "title",
            "config": {
                "description": "Create a fun title about citrus fruits",
                "displayName": "Fruit Title",
                "style": "catchy",
                "length": "short"
            }
        },
        {
            "type": "text",
            "text": "\n\nHey there is a list of fruits here:\n"
        },
        {
            "type": "placeholder",
            "id": "citrus_list",
            "instructionType": "list",
            "config": {
                "description": "list 5 different citrus fruits",
                "displayName": "Citrus Fruits",
                "format": "bullet_points",
                "itemCount": 5
            }
        }
    ]
}